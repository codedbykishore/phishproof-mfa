{
  "name": "phishproof-mfa",
  "version": "1.0.0",
  "description": "Minimal banking prototype demonstrating phishing-resistant MFA using WebAuthn",
  "main": "src/backend/server.js",
  "type": "module",
  "scripts": {
    "dev": "node server.js",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "server": "node server.js",
    "server:prod": "NODE_ENV=production node server.js",
    "start": "node server.js",
    "test": "npm run test:unit && npm run test:contract && npm run test:integration",
    "test:performance": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/performance",
    "test:all": "npm run test && npm run test:performance",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:contract": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/contract",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "deploy": "npm run build:prod && npm run server:prod"
  },
  "keywords": [
    "webauthn",
    "mfa",
    "banking",
    "security",
    "phishing-resistant"
  ],
  "author": "PhishProof MFA Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/frontend/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "transform": {},
    "transformIgnorePatterns": [
      "node_modules/(?!(supertest)/)"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^29.7.0",
    "@simplewebauthn/browser": "^13.2.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "terser": "^5.44.0",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "@simplewebauthn/server": "^13.2.1",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2"
  }
}
